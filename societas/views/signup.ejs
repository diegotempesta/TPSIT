<!DOCTYPE html>
<html lang="it">
    <head>
        <meta charset="UTF-8">
        <title>Signup - Societas</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <!-- Navbar inclusa -->
        <%- include('partials/navbar') %>
        
        <div class="container my-4">
            <h1>Registrazione</h1>
            <!-- Form di signup -->
            <form method="post" action="/signup" enctype="multipart/form-data">
                <!-- Campo username -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                </div>
                <!-- Campo password -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <!-- Campo immagine profilo -->
                <div class="mb-3">
                    <label for="profileImage" class="form-label">Immagine profilo:</label>
                    <input type="file" name="profileImage" id="profileImage" class="form-control"/>
                </div>
                <!-- Pulsante di invio -->
                <button type="submit" class="btn btn-primary">Registrati</button>
            </form>

            <!-- Link al login nel caso l'utente abbia già un account -->
            <p class="mt-3">Hai già un account? <a href="/login">Accedi</a></p>
        </div>

        <!-- Footer incluso -->
        <%- include('partials/footer') %>
        <!-- Script Bootstrap -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
